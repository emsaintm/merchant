<p id="notice"><%= notice %></p>

<h1>Products</h1>
<h2><%= link_to 'New Product', new_admin_product_path, class: 'btn btn-info btn-sm' %>
</h2>


<span class="pull-right">
  <%= form_tag(shop_path, method: :get, role: 'search', class: 'form-inline') do %>
    <div class="form-group">
      <%# TODO: hide the search label %>
      <%= text_field_tag(:search, nil, placeholder: 'Search products', class: 'form-control input-sm') %>

    </div>
      <%= submit_tag('Search', class: 'btn btn-default btn-sm') %>
      <% end %>
</span>


<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Description</th>
      <th>Brand</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.avatar.url(:thumb) %>
        <td><%= product.name %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= product.quantity %></td>
        <td><%= product.description %></td>
        <td><%= product.brand.name %></td>
        <td><%= product.category.name %></td>
        <td><%= link_to 'Show', admin_product_path(product) %></td>
        <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
        <td><%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_admin_product_path, class: 'btn btn-info btn-sm' %>
