<h2>Your Shopping Cart</h2>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>Total Price</th>
    </tr>  


  </thead>
  
  <tbody>
    <% @cart.line_items.each do |item| %>
      <tr>
        <td><%= image_tag product.avatar.url(:thumb) %></td>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %> &time;</td>
        <td><%= number_to_currency(item.price) %></td>
        <td><%= number_to_currency(item.total.price) %></td>
        <td><%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>


      </tr>
    <% end %>



  </tbody>




</table>



<h3>Order Subtotal: <%= number_to_currency(@cart.subtotal) %></h3>

<%= link_to 'Continue Shopping', shop_path, class: 'btn btn-success btn-sm' %>
<%= link_to 'Empty Cart', @cart, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger btn-sm' %>
